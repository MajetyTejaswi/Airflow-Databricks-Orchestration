# Environment Configuration Template
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# SSH Configuration
SSH_KEY_PATH=~/.ssh/airflow-key

# Databricks Configuration
DATABRICKS_HOST=your-workspace-url
DATABRICKS_TOKEN=your-databricks-token

# Airflow Configuration
AIRFLOW_HOME=/home/airflow/airflow
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin123

# EC2 Configuration
EC2_INSTANCE_TYPE=t3.medium
EC2_VOLUME_SIZE=30

# GitHub Configuration (optional)
GITHUB_REPO_URL=https://github.com/your-username/your-dag-repo.git
GITHUB_BRANCH=main

# Databricks Job/Cluster Configuration
DATABRICKS_CLUSTER_ID=your-cluster-id
DATABRICKS_JOB_ID=your-job-id
DATABRICKS_NOTEBOOK_PATH=/Users/your-email@company.com/sample_notebook

# Logging and Monitoring
ENABLE_CLOUDWATCH_LOGS=true
ALERT_EMAIL=your-email@company.com

# Security
ALLOW_SSH_FROM_IP=0.0.0.0/0  # Restrict this in production!
